{% extends 'base.html.twig' %}
{% block body %}
<div class="container">
    <div class="row">
        <table class="table table-striped table-hover table-bordered">
            <thead>
            <tr>
                <th>Client ID</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Scoring</th>
                <th>Options</th>
            </tr>
            </thead>
            <tbody>
            {% for client in clients %}
                <tr>
                    <td>{{ client.id|e }}</td>
                    <td>{{ client.name|e }}</td>
                    <td>{{ client.surname|e }}</td>
                    <td>??</td>
                    <td><input type="button" data-id="{{ client.id|e }}" onclick="viewClientPage(this);" class="btn btn-info" value="View/Edit"></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {% include './components/pagination.html.twig' %}
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {#{{ parent() }}#}
    <script>
        function viewClientPage(d) {
            const clientId = d.getAttribute("data-id");
            //location.href = `/client?id=${clientId}`;
            location.href = `/clients/${clientId}`;
        }
    </script>
{% endblock %}
